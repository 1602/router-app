<% routes.forEach(function (r) { %>
<div class="route">
  <div class="handle">
    <h3>
      <%= r.name || 'Unnamed' %>
    </h3>
    <%- link_to(r.uuid, edit_route(r), {class: 'small'}) %>
    <%- link_to('Destroy', route(r), {class: 'small', method: 'DELETE', remote: true, jsonp: '(function (x) {location.href = x;})'}) %>
  </div>
  <div class="helper">
    <div class="description">
      <%= r.description || "No description given" %>
    </div>
    redirects to <%- link_to(r.template.target, '/routes/' + r.uuid) %>
    </a>
  </div>
</div>
<% });%>

<% if (request.user.freeRouteSlots()) { %>
  <%- link_to('New route', new_route) %>
<% } else { %>
  You can not create more routes
<% } %>
